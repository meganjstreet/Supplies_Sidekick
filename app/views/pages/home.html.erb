<div class="banner mb-4">
  <div>
    <h2>Quicky get your supplies</h2>
<p><strong>"Road to success is always under Construction"</strong></p>
</div>
</div>
<div class="container mb-5">

  <form class="form-inline my-2 my-lg-0 d-flex">
    <input type="submit">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
  </form>
</div>

<div class="container mt-1">

<a href="#" class="card-link"></a>
  <h3>Latest Supplies </h3>


<div class="cards-container">
  <div class="row">
  <% @supplies.each do |supply|%>
  <div class="card col-lg-4 col-12 mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= supply.name%></h5>
      <% if supply.photo.attached? %>
        <div class="card__image">
          <%= cl_image_tag supply.photo.key, width: 100, height: 100 %>
        </div>
        <% else %>
          <img src=<%= supply.img_url %> class="card__image">
        <% end %>

      <p class="card-text"><small class="text-muted"><%= supply.description %></small></p>
      <%= link_to "View Details", supply_path(supply), class: "btn btn-warning w-100 text-white"%>

  </div>
  </div>
  <% end %>

  </div>
</div>
</div>
