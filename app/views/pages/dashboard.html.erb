<h3>My Supplies for Sale</h3>
<% if @supplies.count == 0 %>
  <div class="alert alert-warning">
    You don't have any supplies for sale yet!
  </div>
<% else %>
  <div class="row d-flex justify-content-center">
  <% @supplies.each do |supply| %>
    <div class="card-category col-lg-3 col-md-6 m-3 p-3" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= supply.img_url%>)">
      <div class="card-text">
        <%= link_to supply.name, supply_path(supply) %>
        <p><%= supply.offers.count %> offers</p>
      </div>
    </div>
  <% end %>
  </div>
<% end %>


<h3 class="mb-3">My Pending Offers</h3>
<% if @offers.count == 0 %>
  <div class="alert alert-warning">
    You haven't made any offers yet!
  </div>
<% else %>
  <div class="row d-flex justify-content-center">
  <% @offers.each do |offer| %>
    <div class="card-offer mb-3">
    <img src="<%= offer.supply.img_url %>" />
    <div class="card-offer-infos">
      <h2><%= offer.supply.name %></h2>
      <p>Offer details: <%= offer.details %></p>
      <p>Offer quantity: <%= offer.amount %></p>
      <p>Status: <%= offer.status %></p>
    </div>
  </div>

  <% end %>
  </div>
<% end %>
