<h1>Supplies</h1>
<div class= "map">
  <div style="width: 75%; height: 400px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<ul class="cards">
  <li>
    <a href="" class="card">
      <% @supplies.each do |supply| %>
       <% if supply.photo.attached? %>
        <div class="card__image">
          <%= cl_image_tag supply.photo.key, width: 100, height: 100 %>
        </div>
      <% else %>
        <img class="card-img-top" src=<%= @supply.img_url %> alt="">
      <% end %>
        
        <div class="card__overlay">
          <div class="card__header">
            <div class="card__header-text">
              <h3 class="card__title"><%= supply.name %></h3>
            </div>
          </div>
          <p class="card__description"><%= supply.description %></p>
        </div>
        <button><%= link_to "View details", supply_path(supply) %></button>
      <% end %>
    </a>
  </li>


