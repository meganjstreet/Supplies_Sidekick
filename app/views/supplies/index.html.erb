<h1>Supplies</h1>


<ul class="cards">
  <li>
      <% @supplies.each do |supply| %>
    <a href="" class="card">
       <% if supply.photo.attached? %>
        <div class="card__image" >
          <%= cl_image_tag supply.photo.key, width: 100, height: 100 %>
        </div>
      <% else %>
        <img class="card__image" src=<%= supply.img_url %> alt="">
      <% end %>

        <div class="card__overlay">
          <div class="card__header">
            <div class="card__header-text">
              <h3 class="card__title"><%= supply.name %></h3>
            </div>
          </div>
          <p class="card__description"><%= supply.description %></p>
        </div>
        <%= link_to "View details", supply_path(supply), class: "btn btn-warning text-white" %>
      <% end %>
    </a>
  </li>
