<!DOCTYPE html>
<html>
  <head>
    <title>SuppliesSidekick</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="container-fluid">
      <div>
        <a class="navbar-brand ps-3 pt-3" href="/"><strong>
          Supplies Sidekick
        </a>
        </div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <%= link_to "All Supplies", supplies_path, class: "nav-link" %>
            </li>
              <% if current_user %>

                <li class="nav-item">
                  <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
                </li>
                <li class="nav-item dropdown">
                  <% if current_user.photo.attached? %>
                    <div class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
                      <%= cl_image_tag current_user.photo.key, height: 30, width: 30, crop: :fill %>
                    </div>
                  <% else %>
                    <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src=<%= current_user.avatar_url.start_with?('http') ? current_user.avatar_url : asset_path(current_user.avatar_url) %>/>

                  <% end %>

                  <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/supplies/new">Sell Supplies</a>
                    <%= link_to "Log Out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
                  </div>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "Log In", new_user_session_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
                </li>
              <% end %>
          </ul>
        </div>
      </div>
    </div>

    <%= yield %>

  </body>
</html>
